<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.kujira.homestay.ui.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.main.MainActivity">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/main_nav_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_47sdp"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_graph" />

        <LinearLayout
            android:id="@+id/linear_on_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_47sdp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:elevation="@dimen/_14sdp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <Button
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_baseline_home_24"
                android:textSize="@dimen/_6sdp"
                android:text="Trang chủ"
                android:onClick="@{(view)->viewModel.click(view)}"
                android:textAllCaps="false"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:textAllCaps="false"
                android:id="@+id/btn_heart"
                android:layout_width="0dp"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/_6sdp"
                android:onClick="@{(view)->viewModel.click(view)}"
                android:drawableTop="@drawable/ic_baseline_favorite_24"
                style="?android:attr/buttonBarButtonStyle"
                android:text="Yêu thích" />

            <Button
                android:textAllCaps="false"
                android:textSize="@dimen/_6sdp"
                android:onClick="@{(view)->viewModel.click(view)}"
                android:drawableTop="@drawable/ic_baseline_badge_24"
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/btn_datcho"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Đặt chỗ" />

            <Button
                android:textAllCaps="false"
                android:onClick="@{(view)->viewModel.click(view)}"
                android:textSize="@dimen/_6sdp"
                android:drawableTop="@drawable/ic_baseline_message_24"
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/btn_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Tin nhắn" />

            <Button
                android:textAllCaps="false"
                android:textSize="@dimen/_6sdp"
                android:onClick="@{(view)->viewModel.click(view)}"
                android:drawableTop="@drawable/ic_baseline_account_circle_24"
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/btn_account"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Tài khoản" />


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>