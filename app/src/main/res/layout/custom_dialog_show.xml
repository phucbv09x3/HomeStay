<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_30sdp"
    android:background="@drawable/custom_bg_dialog"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_show"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="Thông tin chi tiết"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/title_name"
        android:layout_marginTop="@dimen/_8sdp"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        android:text="Tên Chủ"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/title_show"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/name_show"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        android:text="Tên Chủ"
        android:layout_marginLeft="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="@id/title_name"
        app:layout_constraintLeft_toRightOf="@id/title_name"
        app:layout_constraintTop_toBottomOf="@id/title_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/title_phone"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        android:text="Số Điện Thoại"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/title_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/phone_show"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        android:text="SĐT"
        android:layout_marginLeft="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="@id/title_phone"
        app:layout_constraintLeft_toRightOf="@id/title_phone"
        app:layout_constraintTop_toBottomOf="@id/title_show"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>