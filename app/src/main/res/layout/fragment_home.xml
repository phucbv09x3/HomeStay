<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.kujira.homestay.ui.home.HomeViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ui.home.HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_homestay"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_60sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/homstay_new"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Bạn muốn đi du lịch ở đâu ?"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_homestay" />

            <EditText
                android:id="@+id/edt_search_home"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/custom_bg_edt_search"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                android:elevation="@dimen/_10sdp"
                android:hint="\t Tìm kiếm địa điểm ở đây ..."
                android:paddingLeft="@dimen/_12sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_home" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rcy_list_province"
                android:layout_marginTop="@dimen/_16sdp"
                app:layout_constraintTop_toBottomOf="@id/edt_search_home"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_height="@dimen/_80sdp"/>

            <LinearLayout
                android:id="@+id/linear_home"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rcy_list_province"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_16sdp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:background="@drawable/custom_bg_edt_search"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:elevation="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="@dimen/_6sdp"
                        android:layout_height="@dimen/_80sdp"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:background="@drawable/custom_bg_edt_search"
                            android:scaleType="center"
                            android:src="@drawable/unnamed" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="HomeStay"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Can ho dich vu va biet thu"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

<!--                <ImageButton-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="@dimen/_100sdp"/>-->
            </LinearLayout>
            <TextView
                android:id="@+id/tv_next"
                android:text="Ha Noi"
                app:layout_constraintTop_toBottomOf="@id/linear_home"
                app:layout_constraintLeft_toLeftOf="parent"
                android:gravity="start|center"
                android:background="@drawable/custom_stroke"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_width="@dimen/_120sdp"
                android:textColor="@color/black"
                android:elevation="@dimen/_8sdp"
                android:paddingStart="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                android:layout_height="@dimen/_40sdp"/>
            <LinearLayout
                app:layout_constraintTop_toBottomOf="@id/tv_next"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:elevation="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_height="@dimen/_40sdp">
                <TextView
                    android:text="Đăng nhập để nhận ưu đãi và tận hưởng"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:layout_weight="1.7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1.3"
                    android:background="#FF9900"
                    android:textColor="@color/white"
                    android:text="Dang nhap"
                    android:gravity="center"
                    android:textSize="@dimen/_18sdp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>